{% extends 'base.html.twig' %}

{% block title %}Mes Projets{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/projects.css') }}">
{% endblock %}

{% block content %}
<div class="centp">
    <section class="wrapper-projects">
        <h1>Mes Projets</h1>
        <div class="projects">
            {% for row in projects|batch(2) %}
                <div class="project-row {% if loop.index is even %}reverse{% endif %}">
                    {% for project in row %}
                        <div class="project-card">
                            <div class="project-text">
                                <h2>{{ project.title }}</h2>
                                <p>{{ project.description }}</p>
                                <a href="{{ project.link }}" target="_blank">Voir le projet</a>
                            </div>
                            <div class="project-image">
                                <img src="{{ asset('img/projects/' ~ project.image) }}" alt="{{ project.title }}">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucun projet pour le moment.</p>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}

